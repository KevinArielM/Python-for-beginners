# Addition
def sum (x, y) :
  print("The result is: ")
  print(x + y)

# Substraction
def sub (x, y) :
  print("The result is: ")
	print(x-y)

# Multiplication
def mul (x, y) :
	print("The result is: ")
	print(x * y)

# Division
def div (x, y) :
	if y == 0:
		return
	print("The result is: ")
	print(x / y)

# Exponent
def exp (x, y) :
  print("The result is: ")
  print(x ** y)



def calculator(a, b, operacion) :
