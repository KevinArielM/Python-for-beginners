def sumar(a, b):

	print(a + b)

def restar(a, b):
	print(a - b)

def multiplicacion(a, b):
	print(a * b)

def calculadora(a, b, operacion):
	if operacion == "sumar":
		sumar(a, b)
	elif operacion == "restar":
		restar(a, b)
	elif operacion == "multiplicacion":
		multiplicacion(a, b)

calculadora(5, 3, "restar")

