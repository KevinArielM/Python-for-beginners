import random
from random import randint, choice


##define variable of decision

decision=input("Welcome! Do you want to play (yes, no)?: ")
cards = [randint(2, 10) for i in range(2)]
computercards = [randint(2, 10) for i in range(2)]
##define game function, it makes the operations
##use de dictionaries to print our cards and computer's cards
def Blackjack():
	print(f"Your cards: {cards}, total score: {sum(cards)}")
	print(f"Computer's first card: {computercards[0]}")

##define a funcion using While in order to create a loop
def Validation():
	while True:
		if decision == "yes":
			return Blackjack()
      
      
		elif decision=="no":
			print("Come back soon!")
			break

Validation()

