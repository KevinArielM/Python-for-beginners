  def ddc():
      while True:
        if CORP=="C":
          print(f"Your total with 3 cards are  {sum(cards)}")
          break
        if CORP=="P":
          print(f"the total of the cpu are {sum(computercards)}")
          break
          

if decision=="yes":
  ddc()

if sum(cards)>21:
  if sum(cards)<sum(computercards)<=21:
